{
  "version": "2018-05-29",
  "operation": "Query",
  "index": "escuelaID-index",
  "query": {
    "expression": "escuelaID = :e",
    "expressionValues": {
      ":e": $util.dynamodb.toDynamoDBJson($ctx.args.escuelaID)
    }
  }
  #if($ctx.args.gradoID)
  ,
  "filter": {
    "expression": "attribute_exists(gradoID) AND gradoID = :g",
    "expressionValues": {
      ":g": $util.dynamodb.toDynamoDBJson($ctx.args.gradoID)
    }
  }
  #end
}